<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.details_card">

    <LinearLayout
        android:layout_width="321dp"
        android:layout_height="635dp"
        android:background="#000000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:id="@+id/detailsGridLayout"
            android:layout_width="283dp"
            android:layout_height="267dp"
            android:layout_marginTop="88dp"
            android:background="@color/black"
            app:columnCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:orientation="horizontal"
            app:rowCount="8"
            android:layout_gravity="center"
            tools:context=".fragments.details_card">

            <TextView
                android:id="@+id/artistLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Artist/Teams"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/artistTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/venueLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text="Venue"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/venueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/dateLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:text="Date"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/timeLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:text="Time"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/genresLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:text="Genres"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/genresTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/priceRangeLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:text="Price Range"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/priceRangeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="1"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/ticketStatusLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="0"
                android:text="Ticket Status"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ticketStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="1"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/buyTicketAtLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="0"
                android:text="Buy Tickets At"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/buyTicketAtTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="1"
                android:textColor="@color/green"
                android:ellipsize="end"
                android:maxLines="1"
                android:scrollHorizontally="true" />

        </GridLayout>

        <ImageView
            android:id="@+id/seatMapImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_image_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailsGridLayout"
            app:layout_constraintVertical_bias="0.139" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>