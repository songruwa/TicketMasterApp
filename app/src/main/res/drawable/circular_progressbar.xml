<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:innerRadiusRatio="3"
            android:shape="ring"
            android:thicknessRatio="20.0">
            <solid android:color="#D3D3D3" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">
            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:thicknessRatio="20.0">
                <gradient
                    android:centerColor="#812B2B"
                    android:endColor="#812B2B"
                    android:startColor="#812B2B"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>

